<script>
    document.addEventListener("DOMContentLoaded", function () {
        let rowsPerPage = 5; // Number of rows per page
        let currentPage = 1; 
    
        function filterTable() {
    let input = document.getElementById("searchInput").value.toLowerCase();
    let showCompleted = document.getElementById("completedFilter").checked;
    let showIncomplete = document.getElementById("incompletedFilter").checked;
    let table = document.getElementById("dataTable");
    let rows = table.getElementsByTagName("tr");
    let filteredRows = [];

    for (let i = 1; i < rows.length; i++) { // Skip header row
        let cells = rows[i].getElementsByTagName("td");
        let nameCell = cells[1]; // Column with student name
        let progressCell = cells[2]; // Column with progress

        // Extract progress amount from data attribute
        let progressData = progressCell.getAttribute("data-progress");
        console.log(progressData);
        let progressAmount = progressData ? parseInt(progressData) : 0;

        let isCompleted = progressAmount > 0; // Students with progress > 0
        let isIncomplete = progressAmount === 0; // Students with no progress

        let nameMatches = nameCell ? nameCell.textContent.toLowerCase().includes(input) : false;
        let statusMatches = 
            (showCompleted && isCompleted) || 
            (showIncomplete && isIncomplete);

        if (nameMatches && statusMatches) {
            rows[i].style.display = "";
            filteredRows.push(rows[i]);
        } else {
            rows[i].style.display = "none";
        }
    }

    paginate(filteredRows);
}


        function paginate(filteredRows = null) {
            let table = document.getElementById("dataTable");
            let rows = filteredRows || Array.from(table.getElementsByTagName("tr")).slice(1); // Ignore header
    
            let totalPages = Math.ceil(rows.length / rowsPerPage);
            currentPage = Math.min(currentPage, totalPages) || 1;
    
            rows.forEach((row, index) => {
                row.style.display = index >= (currentPage - 1) * rowsPerPage && index < currentPage * rowsPerPage ? "" : "none";
            });
    
            renderPagination(totalPages);
        }
    
        function renderPagination(totalPages) {
            let paginationContainer = document.getElementById("pagination");
            paginationContainer.innerHTML = "";
    
            for (let i = 1; i <= totalPages; i++) {
                let btn = document.createElement("button");
                btn.textContent = i;
                btn.classList.add("btn", "btn-sm", "btn-primary", "mx-1");
                if (i === currentPage) btn.classList.add("active");
                btn.onclick = () => { currentPage = i; paginate(); };
                paginationContainer.appendChild(btn);
            }
        }
    
        let tableContainer = document.querySelector(".table-responsive");
        let paginationDiv = document.createElement("div");
        paginationDiv.id = "pagination";
        paginationDiv.classList.add("mt-3");
        tableContainer.appendChild(paginationDiv);
    
        paginate();
        document.getElementById("searchInput").addEventListener("keyup", () => filterTable());
        document.getElementById("completedFilter").addEventListener("change", filterTable);
        document.getElementById("incompletedFilter").addEventListener("change", filterTable);
    });
    </script>
    
