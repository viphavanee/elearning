    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const token = localStorage.getItem('token'); // ตรวจสอบว่า token ถูกดึงจาก localStorage ได้ไหม

            if (token) {
                try {
                    const decodedToken = jwtDecode(token); // ถอดรหัส JWT token
                    const userId = decodedToken.userId; // ดึง userId จาก token (ตรวจสอบว่าชื่อ field ใน token ถูกต้องหรือไม่)
                    const lessonId = "<%= lesson._id %>"; // สมมติว่า lesson._id ถูกส่งจาก server-side

                    if (userId) {
                        // ตั้งค่า href สำหรับปุ่ม "เข้าสู่บทเรียน" และ "กลับ"
                        const nextBtn = document.getElementById('next-btn');
                        const backBtn = document.getElementById('back-btn');

                        nextBtn.href = `/lesson/stdViewLesson/${lessonId}/${userId}`;
                        backBtn.href = `/lesson/std/${lessonId}/directory`;

                        // ตรวจสอบว่าปุ่มถูกตั้งค่า href ถูกต้องหรือไม่
                        console.log('Next button href:', nextBtn.href);
                        console.log('Back button href:', backBtn.href);
                    }
                } catch (error) {
                    console.error('Error decoding token:', error);
                }
            } else {
                console.log('Token not found');
            }
        });
    </script>
