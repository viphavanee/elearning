            } else {
                navigate.show();  // Show the navigate button if not deleted
                navigate.attr('href', `/comment/admin/getCommentByThemeId/${details[0].themeId}`);
            }

        } else {
            tableBody.append('<tr><td colspan="3">No details available</td></tr>');
        }
    });

    function formatDate(date) {
        const options = { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' };
        return new Intl.DateTimeFormat('en-GB', options).format(new Date(date));
    }
