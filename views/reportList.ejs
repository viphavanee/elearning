<script>
    document.getElementById('themeFilter').addEventListener('change', function () {
        const filterValue = this.value;
        const rows = document.querySelectorAll('#themeTableBody tr');
        let visibleRowCount = 0;

        rows.forEach(row => {
            // Ignore the 'No theme reported' row
            if (row.id === 'noThemeRow') {
                row.style.display = 'none';
                return;
            }

            // Show all rows if 'all' is selected
            if (filterValue === 'all') {
                row.style.display = '';
                visibleRowCount++;
            } else {
                // Show/Hide rows based on the filter value
                if (row.classList.contains(filterValue)) {
                    row.style.display = '';
                    visibleRowCount++;
                } else {
                    row.style.display = 'none';
                }
            }
        });

        // Show 'No theme reported' row if no rows are visible
        if (visibleRowCount === 0) {
            document.getElementById('noThemeRow').style.display = '';
        }
    });
</script>
