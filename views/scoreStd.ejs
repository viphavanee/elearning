                </nav>

                <div class="container-fluid">
                    <div class="card border-none">
                        <div class="d-flex justify-content-between align-items-center p-4">
                            <p class="m-0 font-weight-bold text-dark h2">คะแนนสอบ</p>
                        </div>
                        <div class="card-body">
                            <% if (lesson.length===0) { %>
                                <p class="text-center">No lessons available.</p>
                                <% } else { %>
                                    <div class="row">
                                        <% lesson.forEach((lessonItem, index)=> { %>
                                            <% const lessonNum=lessonItem.lessonNum; %>
                                                <% const lessonName=lessonItem.lessonName; %>
                                                    <% const preTest=data[lessonNum]?.preTest.length> 0 ?
                                                        data[lessonNum].preTest[0] : null; %>
                                                        <% const postTest=data[lessonNum]?.postTest.length> 0 ?
                                                            data[lessonNum].postTest[0] : null; %>

                                                            <div class="col-md-4 mb-3">
                                                                <!-- Change col-md-4 for 3 cards per row -->
                                                                <div class="card shadow-sm">
                                                                    <div class="card-header font-weight-bold">
                                                                        บทที่ <%= lessonNum %> - <%= lessonName %>
                                                                    </div>
                                                                    <div class="card-body">

                                                                        <!-- Pre-Test Score Section -->
                                                                        <div
                                                                            class="d-flex justify-content-between align-items-center mb-2">
                                                                            <span>คะแนนก่อนเรียน</span>
                                                                            <div>
                                                                                <% if (preTest) { %>
                                                                                    <span>
                                                                                        <%= preTest.totalScore %>
                                                                                    </span> /
                                                                                    <span>
                                                                                        <%= preTest.fullScore %>
                                                                                    </span>
                                                                                    <% } else { %>
                                                                                        <span
                                                                                            class="text-muted">ไม่มีข้อมูล</span>
                                                                                        <% } %>
                                                                            </div>
                                                                        </div>
                                                                        <div class="progress mb-3">
                                                                            <div class="progress-bar <%= preTest ? (preTest.totalScore < 5 ? 'bg-danger' : (preTest.totalScore === 5 ? 'bg-warning' : 'bg-success')) : 'bg-secondary' %>"
                                                                                role="progressbar"
                                                                                style="width: <%= preTest ? (preTest.totalScore / preTest.fullScore) * 100 : 0 %>%"
                                                                                aria-valuenow="<%= preTest ? preTest.totalScore : 0 %>"
                                                                                aria-valuemin="0" aria-valuemax="100">
                                                                            </div>
                                                                        </div>

                                                                        <!-- Post-Test Score Section -->
                                                                        <div
                                                                            class="d-flex justify-content-between align-items-center mb-2">
                                                                            <span>คะแนนหลังเรียน</span>
                                                                            <div>
                                                                                <% if (postTest) { %>
                                                                                    <span>
                                                                                        <%= postTest.totalScore %>
                                                                                    </span> /
                                                                                    <span>
                                                                                        <%= postTest.fullScore %>
                                                                                    </span>
                                                                                    <% } else { %>
                                                                                        <span
                                                                                            class="text-muted">ไม่มีข้อมูล</span>
                                                                                        <% } %>
                                                                            </div>
                                                                        </div>
                                                                        <div class="progress">
                                                                            <div class="progress-bar <%= postTest ? (postTest.totalScore < 5 ? 'bg-danger' : (postTest.totalScore === 5 ? 'bg-warning' : 'bg-success')) : 'bg-secondary' %>"
                                                                                role="progressbar"
                                                                                style="width: <%= postTest ? (postTest.totalScore / postTest.fullScore) * 100 : 0 %>%"
                                                                                aria-valuenow="<%= postTest ? postTest.totalScore : 0 %>"
                                                                                aria-valuemin="0" aria-valuemax="100">
                                                                            </div>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <% if ((index + 1) % 3===0) { %>
                                    </div>
                                    <div class="row"> <!-- Close row after 3 cards -->
                                        <% } %>
                                            <% }); %>
                                    </div>
                                    <% } %>
                        </div>
                    </div>
                </div>

            </div>
        </div>

