        <div class="container-fluid">
          <form action="/lesson/edit/<%= editLesson._id %>" method="POST" enctype="multipart/form-data">
            <h2>แก้ไขบทเรียน</h2>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="name">บทที่</label>
                <input type="text" class="form-control" class="bx" name="newLessonNum" placeholder="บทที่"
                  value="<%= editLesson.lessonNum %>" required>
              </div>
              <div class="form-group col-md-6">
                <label for="lastname">ชื่อบทเรียน</label>
                <input type="text" class="form-control" class="bx" name="newLessonName" placeholder="ชื่อบทเรียน"
                  value="<%= editLesson.lessonName %>" required>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-12">
                <label for="inputEmail4">เนื้อหา</label>
                <textarea id="my-expressjs-tinymce-app" name="newContent"
                  value="<%= editLesson.content %>"><%= editLesson.content %></textarea><br />
                <!-- <textarea id="my-expressjs-tinymce-app" name="newContent"
                  value="<%= editLesson.content %>"><%= decodeURIComponent(escapedContent) %></textarea><br /> -->
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-12">
                <label for="inputEmail4">รูปปก</label>
                <% if (editLesson.image) { %>
                  <img src="data:image/jpeg;base64,<%= editLesson.image %>" alt="Image" class="img-fluid">
                  <% } %> <br>
                    <input type="file" id="image" name="newImage" />
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="newUrl">ลิงก์สื่อการสอน</label>
              <input type="text" class="form-control" class="bx" name="newUrl" placeholder="ลิงก์สื่อการสอน"
                value="<%= editLesson.vdo_url %>" required>
            </div>
            <div class="form-group submit-btn">
              <button type="submit" class="btn btn-success" id="butEditL">บันทึก</button>
            </div>
          </form>
        </div>
      </div>
