        <script type="application/javascript">
          document.getElementById("createLessonForm").addEventListener("submit", async function (event) {
            event.preventDefault();

            // อัปเดตเนื้อหาใน TinyMCE ก่อนที่ข้อมูลจะถูกส่ง
            tinymce.get('my-expressjs-tinymce-app').save();

            const form = event.target;
            const formData = new FormData(form);

            // ตรวจสอบค่าที่ต้องกรอก
            const lessonNum = formData.get("lessonNum").trim();
            const lessonName = formData.get("lessonName").trim();
            const vdo_url = formData.get("vdo_url").trim();
            const content = tinymce.get('my-expressjs-tinymce-app').getContent().trim();
            const image = formData.get("image");

            if (!lessonNum || !lessonName || !vdo_url || !content || !image.name) {
              Swal.fire({
                icon: 'warning',
                title: 'ข้อมูลไม่ครบถ้วน',
                text: 'กรุณากรอกข้อมูลให้ครบทุกช่อง',
              });
              return;
            }

            try {
              const response = await fetch(form.action, {
                method: "POST",
                body: formData
              });
              const result = await response.json();

              if (response.status === 200 && result.status_code === "200") {
                Swal.fire({
                  icon: 'success',
                  title: 'สำเร็จ',
                  text: result.message,
                }).then(() => {
                  window.location.href = "/lesson"; // Redirect to /lesson
                });
              } else {
                Swal.fire({
                  icon: 'error',
                  title: 'เกิดข้อผิดพลาด',
                  text: result.message,
                });
              }
            } catch (error) {
              Swal.fire({
                icon: 'error',
                title: 'เกิดข้อผิดพลาด',
                text: 'Internal Server Error',
              });
            }
          });
        </script>
        <script>
          document.getElementById("image").addEventListener("change", function () {
            const file = this.files[0]; // ดึงไฟล์ที่อัปโหลด
            if (file) {
              const allowedTypes = ["image/jpeg", "image/png", "image/gif", "image/webp"]; // ประเภทไฟล์ที่อนุญาต
              if (!allowedTypes.includes(file.type)) {
                Swal.fire({
                  icon: "error",
                  title: "ไฟล์ไม่ถูกต้อง",
                  text: "กรุณาอัปโหลดไฟล์รูปภาพเท่านั้น (JPG, PNG, GIF, WEBP)",
                });
                this.value = ""; // รีเซ็ตค่า input
              }
            }
