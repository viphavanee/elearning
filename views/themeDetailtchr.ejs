                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <i class="fa fa-user-circle-o fa-2x mr-3"></i>
                                                <div>
                                                    <h6 class="m-0 font-weight-semibold text-dark">
                                                        <%= comment.user.firstname %>
                                                            <%= comment.user.lastname %>
                                                    </h6>
                                                    <small class="text-muted">
                                                        <%= comment.user.role %>
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="dropdown">
                                                <a class="btn btn-link text-decoration-none text-secondary dropdown-toggle"
                                                    href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
                                                    aria-haspopup="true" aria-expanded="false">
                                                    <i class="fa-solid fa-ellipsis"></i>
                                                </a>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                    <div id="commentActionBtn">
                                                        <a href="#" class="dropdown-item editCommentBtn"
                                                            data-toggle="modal" data-target="#editCommentModal">
                                                            <i class="fa-regular fa-pen-to-square mr-2"></i>
                                                            แก้ไข
                                                        </a>
                                                        <a href="/comment/teacher/delete/<%= comment.themeId %>/<%= comment._id %>"
                                                            class="dropdown-item delete-link delete-commentLink">
                                                            <i class="fa-solid fa-trash mr-2"></i>
                                                            ลบ
                                                        </a>
                                                    </div>
                                                    <a href="#" class="dropdown-item report-link" data-bs-toggle="modal"
                                                        data-bs-target="#reportModal" data-type="comment"
                                                        data-comment-id="<%= comment._id %>"
                                                        data-theme-id="<%= comment.themeId %>">
                                                        <i class="fa-regular fa-flag mr-2"></i> รายงาน
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <div id="commentContent" class="text-dark">
                                                <%- comment.content %>
                                            </div>
                                        </div>
                                        <p class="d-none" id="commentUserId">
                                            <%= comment.userId %>
                                        </p>
                                        <p class="d-none" id="commentThemeId">
                                            <%= comment.themeId %>
                                        </p>
                                        <div class="text-end">
                                            <small class="text-muted mr-2" data-createDate="<%= comment.createDate %>"
                                                id="formattedDate"></small>
                                        </div>
                                        <!-- Button to toggle reply form -->
                                        <a href="#"
                                            class="text-decoration-none text-primary mt-3 toggle-reply-btn ml-auto">
                                            <i class="fa-solid fa-reply mr-2"></i>ตอบกลับ
                                        </a>
                                        <!-- Reply Form -->
                                        <div class="reply-form mt-3 d-none">
                                            <form action="/reply" method="POST" id="replyForm">
                                                <input type="hidden" name="themeId" value="<%= comment.themeId %>">
                                                <input type="hidden" name="commentId" value="<%= comment._id %>">
                                                <input type="hidden" name="userId" id="userId" value="">
                                                <div class="form-group">
                                                    <textarea class="form-control" name="content"
                                                        placeholder="เขียนคำตอบของคุณ..." rows="2" required></textarea>
                                                </div>
                                                <div class="d-flex justify-content-end">
                                                    <button type="submit"
                                                        class="btn btn-primary mt-2 ml-auto">ส่ง</button>
                                                </div>
                                            </form>
                                        </div>
                                        <!-- Display Replies -->
                                        <div class="ml-2 mt-2">
                                            <% if (comment.reply && comment.reply.length> 0) { %>
                                                <% comment.reply.forEach((reply)=> { %>
                                                    <div class="card p-4 mt-2 ml-4 reply-card">
                                                        <div class="d-flex align-items-center justify-content-between">
                                                            <div class="d-flex align-items-center">
                                                                <i class="fa fa-user-circle-o fa-lg mr-2"></i>
                                                                <div>
                                                                    <strong class="text-dark">
                                                                        <%= reply.user.firstname %>
                                                                            <%= reply.user.lastname %>
                                                                    </strong>
                                                                    <small class="text-muted">(<%= reply.user.role %>
                                                                            )</small>
                                                                </div>
                                                            </div>
                                                            <div class="dropdown show">
                                                                <a class="btn btn-link text-decoration-none text-secondary dropdown-toggle"
                                                                    href="#" role="button" id="dropdownMenuLink"
                                                                    data-toggle="dropdown" aria-haspopup="true"
                                                                    aria-expanded="false">
                                                                    <i class="fa-solid fa-ellipsis"></i>
                                                                </a>
                                                                <div class="dropdown-menu"
                                                                    aria-labelledby="dropdownMenuLink">
                                                                    <div class="actionBtn">
                                                                        <a class="dropdown-item editBtn editReplyBtn"
                                                                            href="#" data-toggle="modal"
                                                                            data-target="#editReplyModal">
                                                                            <i
                                                                                class="fa-regular fa-pen-to-square mr-2"></i>
                                                                            Edit
                                                                        </a>
                                                                        <a class="dropdown-item delete-link"
                                                                            href="/reply/delete/<%= reply._id %>"
                                                                            id="deleteBtn">
                                                                            <i class="fa-solid fa-trash mr-2"></i>
                                                                            Delete
                                                                        </a>
                                                                    </div>
                                                                    <a href="#" class="dropdown-item report-link"
                                                                        data-type="reply"
                                                                        data-reply-id="<%= reply._id %>"
                                                                        data-theme-user-id="<%= reply.userId %>"
                                                                        data-theme-id="<%= comment.themeId %>"
                                                                        data-comment-id="<%= comment._id %>"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#reportModal"><i
                                                                            class="fa-regular fa-flag mr-2"></i>
                                                                        Report</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="mt-2">
                                                            <p class="text-dark"><%- reply.content %></p>
                                                            <small class="text-muted"
                                                                data-createDate="<%= reply.createAt %>"></small>
                                                            <p class="d-none" id="replyUserId"><%- reply.userId %></p>
                                                            <p class="d-none" id="replyId"><%- reply._id %></p>
                                                            <p class="d-none" id="themeDataId"><%- reply.themeId %></p>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                                        <% } %>
                                        </div>
                                    </div>
                                    <% }); %>

                            </div>

                        </div>
                    </div>
                </div>


            </div>
        </div>
