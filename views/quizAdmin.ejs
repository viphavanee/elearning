        <div class="container-fluid">
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-dark">จัดการแบบทดสอบ</h6>
            </div>
            <Card></Card>
            <div class="card-body">
              <div class="table-responsive">
                <button class="btn btn-primary" id="btnCreate" data-toggle="modal"
                  data-target="#createQuizModal">เพิ่มแบบทดสอบ</button>
                <!-- <a class="btn btn-primary" href="/quizAdmin/createQuiz" id="btnCreate" >เพิ่มแบบทดสอบ</a> -->
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>บทที่</th>
                      <th>ชื่อแบบทดสอบ</th>
                      <th>จำนวนคำถาม</th>
                      <th>เวลา(นาที)</th>
                      <th>คะแนน</th>
                      <th>จัดการ</th>
                      <th>แก้ไข</th>
                      <th>ลบ</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (quiz && quiz.length> 0) { %><% quiz.forEach(function(quiz) { %>
                        <tr>
                          <td>
                            <%= quiz.lessonId %>
                          </td>
                          <td>
                            <%= quiz.quizName %>
                          </td>
                          <td>
                            <%= quiz.numberOfQuestions %>
                          </td>
                          <td>
                            <%= quiz.timeInMinutes %>
                          </td>
                          <td>
                            <%= quiz.score %>
                          </td>
                          <td><a href="/question/<%= quiz._id %>"><i class="fas fa-eye" id="view"></i></i></i></a>
                          </td>
                          <td>
                            <button type="button" class="btn btn-link edit-btn" data-toggle="modal"
                              data-target="#editQuizModal" data-id="<%= quiz._id %>">
                              <i class="fas fa-pen-square"></i>
                            </button>
                          </td>
                          <td><a href="/quizAdmin/delete/<%= quiz._id %>" class="delete-link"><i class="fas fa-trash"
                                id="delete"></i></a>
                          </td>
                        </tr>
                        <% }); %>
                          <% } else { %>
                            <tr>
                              <td colspan="4">No quiz available.</td>
                            </tr>
                            <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="modal fade" id="createQuizModal" tabindex="-1" role="dialog" aria-labelledby="createQuizModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="createQuizModalLabel">เพิ่มแบบทดสอบ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <form id="createQuizForm" action="/quizAdmin/createQuiz" method="POST" style="margin: 0; width: 100%;">
                <div class="modal-body">
                  <div class="form-group">
                    <label for="lessonNum">บทที่</label>
                    <select id="select-option" name="lessonId">
                      <% lessons.forEach((lesson)=> { %>
                        <option value="<%= lesson.lessonNum %>">
                          <%= lesson.lessonNum %> - <%= lesson.lessonName %>
                        </option>
                        <% }); %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="quizName">ชื่อแบบทดสอบ</label>
                    <input type="text" name="quizName" class="form-control" placeholder="ชื่อแบบทดสอบ" required>
                  </div>
                  <div class="form-group">
                    <label for="numberOfQuestions">จำนวนคำถาม</label>
                    <input type="number" name="numberOfQuestions" class="form-control" placeholder="จำนวนคำถาม"
                      required>
                  </div>
                  <div class="form-group">
                    <label for="timeInMinutes">เวลา (นาที)</label>
                    <input type="number" name="timeInMinutes" class="form-control" placeholder="เวลา" required>
                  </div>
                  <div class="form-group">
                    <label for="score">คะแนน</label>
                    <input type="number" name="score" class="form-control" placeholder="คะแนน" required>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">ปิด</button>
                  <button type="submit" name="submit" class="btn btn-primary">เพิ่มแบบทดสอบ</button>
                </div>
              </form>

            </div>
          </div>
        </div>


        <script>
          document.addEventListener('DOMContentLoaded', function () {
            const editButtons = document.querySelectorAll('.edit-btn');

            editButtons.forEach(button => {
              button.addEventListener('click', async function () {
                const quizId = this.getAttribute('data-id');

                try {
                  const response = await fetch(`/quizAdmin/edit/${quizId}`);
                  const quiz = await response.json();
                  const editQuiz = quiz.data;

                  document.querySelector('#editQuizModal input[name="newlessonId"]').value = editQuiz.lessonId;
                  document.querySelector('#editQuizModal input[name="newquizName"]').value = editQuiz.quizName;
                  document.querySelector('#editQuizModal input[name="newnumberOfQuestions"]').value = editQuiz.numberOfQuestions;
                  document.querySelector('#editQuizModal input[name="newtimeInMinutes"]').value = editQuiz.timeInMinutes;
                  document.querySelector('#editQuizModal input[name="newscore"]').value = editQuiz.score;
                  document.querySelector('#editQuizModal input[name="quizId"]').value = editQuiz.quizId;
                  const editQuestionForm = document.querySelector('#editQuestionForm');
                  if (editQuestionForm) {
                    editQuestionForm.action = `/quizAdmin/edit/${quizId}`;
                  }
                } catch (error) {
                  console.error('Error fetching quiz data:', error);
                }
              });
            });
          });
        </script>

        <div class="modal fade" id="editQuizModal" tabindex="-1" role="dialog" aria-labelledby="editQuizModalLabel"
