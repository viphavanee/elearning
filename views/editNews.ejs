    }

    .card {
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-top: 30px;
    }

    .card-body {
      padding: 30px;
    }

    .card-header {
      background-color: #007bff;
      color: white;
      text-align: center;
      padding: 15px;
      border-radius: 10px 10px 0 0;
    }

    .form-row {
      margin-bottom: 15px;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    label {
      font-weight: bold;
    }

    input[type="text"],
    input[type="date"],
    textarea {
      width: 100%;
      padding: 12px;
      font-size: 1rem;
      border-radius: 5px;
      border: 1px solid #ced4da;
    }

    textarea {
      height: 150px;
    }

    .card-body input[type="text"],
    .card-body input[type="date"],
    .card-body textarea,
    .card-body input[type="file"] {
      border: 1px solid #ccc;
      padding: 8px;
      border-radius: 4px;
      width: 100%;
      height: 3rem;
      font-size: 16px;
      cursor: pointer;
    }

    button {
      padding: 12px 20px;
      background-color: #4e73df;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 1rem;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }

    img.img-fluid {
      max-width: 100%;
      height: auto;
      margin-bottom: 1rem;
    }

    /* Centering the button */
    .submit-btn {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 20px;
      /* optional for spacing */
    }

    button {
      padding: 12px 15px;
      font-size: 18px;
      background-color: #4e73df;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      width: auto;
      /* Let the button adjust based on content width */
    }
    
    button:hover {
      background-color: #0056b3;
    }
    #butEditL {
      padding: 8px 10px;
            font-size: 18px;
            background-color: #4e73df;
            color: white;
            border: none;
            border-radius: 5px;
            width: 30%;
            cursor: pointer;
    }
    /* Submit Button */
    .submit-btn input[type="submit"] {
      padding: 8px 10px;
      font-size: 18px;
      background-color: #4e73df;
      color: white;
      border: none;
      border-radius: 5px;
      width: 30%;
      cursor: pointer;
    }


    /* Responsive Design */

    /* Mobile Devices */
    @media (max-width: 767px) {
      .card {
        margin: 10px;
      }

      .form-row {
        display: block;
      }

      button {
        width: 100%;
        margin-top: 10px;
      }

      .submit-btn input[type="submit"] {
        width: 50%;
      }
      #butEditL {
            width: 100%;    
    }

    }

    /* Tablets */
    @media (min-width: 768px) and (max-width: 1024px) {
      .form-row {
        display: flex;
        flex-wrap: wrap;
      }

      button {
        width: 100%;
      }
      #butEditL {
            width: 50%;    
    }
    }
