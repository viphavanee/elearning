                    </tr>
                  </thead>
                  <tbody>
                    <% if (quiz && quiz.length> 0) { %><% quiz.forEach(function(quiz) { %>
                        <tr>
                          <td>
                            <%= quiz.lessonId %>
                          </td>
                          <td>
                            <%= quiz.quizName %>
                          </td>
                          <td>
                            <%= quiz.numberOfQuestions %>
                          </td>
                          <td>
                            <%= quiz.timeInMinutes %>
                          </td>
                          <td>
                            <%= quiz.score %>
                          </td>
                          <td><a href="/question/tchr/<%= quiz._id %>"><i class="fas fa-eye" id="edit"></i></i></i></a>
                          </td>

                        </tr>
                        <% }); %>
                          <% } else { %>
                            <tr>
                              <td colspan="4">No quiz available.</td>
                            </tr>
                            <% } %>
                  </tbody>
                </table>
              </div>
