                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>บทที่</th>
                      <th>ชื่อแบบทดสอบ</th>
                      <th>จำนวนคำถาม</th>
                      <th>เวลา(นาที)</th>
                      <th>คะแนน</th>
