                <div class="container-fluid">
                    <h3 class="mb-3 font-weight-bold text-dark">
                        ติดตามผลการเรียน
                    </h3>
                    <% if (lessons && lessons.length> 0) { %>
                        <div class="row">
                            <% lessons.forEach(function(lesson) { %>
                                <div class="col-12 col-md-3 mb-4"> <!-- Change col-md-4 to col-md-3 -->
                                    <a href="/progress/<%= teacherId %>/<%= roomCode %>/<%= lesson._id %>"
                                        class="card text-decoration-none">
                                        <% if (lesson.image && lesson.image.length> 0) { %>
                                            <img src="data:image/png;base64,<%= lesson.image %>" class="card-img-top"
                                                alt="Classroom Image" />
                                            <% } else { %>
                                                <img src="..." class="card-img-top" alt="ไม่พบรูป" />
                                                <% } %>
                                                    <div class="card-body">
                                                        <span class="card-title text-size-md font-weight-semibold">
                                                            บทที่ <%= lesson.lessonNum %>
                                                                <%= lesson.lessonName %>
                                                        </span>
                                                    </div>
                                    </a>
                                </div>
                                <% }); %>
                        </div>
                        <% } else { %>
                            <p>ไม่มีบทเรียน</p>
                            <% } %>
                </div>
            </div>
