  <script>
    // Ensure the DOM is fully loaded
    document.addEventListener('DOMContentLoaded', function () {
      const token = localStorage.getItem('token');
      const decodedToken = jwtDecode(token); // Decodes the JWT token
      const classroomId = decodedToken.classroomId;
      const roomCode = decodedToken.roomCode;
      // Assuming userId is a field in your token
      const userId = decodedToken.userId;
      if (userId) {
        // Set the href attribute with the userId
        const classroomLink = document.getElementById('classroomLink');
        classroomLink.href = `/classroom/std/${userId}`;
        const profileLink = document.getElementById('profile-link');
        profileLink.href = `/profile/${userId}`;
        const scorelink = document.getElementById('scorelink');
        scorelink.href = `/attempt/score/${userId}`;


        // Fetch notifications
        fetchNotifications(userId);
      }

      if (classroomId) {
        const lessonLink = document.getElementById('lessonLink');
        lessonLink.href = `/lesson/std/${classroomId}`;
      }
     
      if(userId && roomCode){
        const getProgress = async () => {
          try {
              const response = await fetch(`/progress/std/${userId}/${roomCode}`);
              const progressData = await response.json();
      
              // Convert progressData into a Set for efficient lookup
              const completedLessons = new Set(progressData.filter(lesson => lesson.isPost).map(lesson => lesson.lessonId));
      
              // Loop through all lesson titles and check if their ID is in completedLessons
              document.querySelectorAll('#lesson-title').forEach(title => {
                  const lessonId = title.getAttribute('data-id');
                  if (completedLessons.has(lessonId)) {
                      title.classList.add('text-secondary');
                      title.querySelectorAll('#success-badge').forEach(badge => {
                          badge.classList.remove('d-none');
                          badge.classList.add('text-white');
                      });
                  }
              });
          } catch (error) {
              console.error("Error fetching progress data:", error);
          }
      };
      getProgress();
      }
    });

    document.addEventListener('DOMContentLoaded', function () {
      const searchInput = document.getElementById('searchLesson');
      const lessonCards = document.querySelectorAll('.col-12'); // Adjust selector to match lesson container

      searchInput.addEventListener('input', function (event) {
        const query = event.target.value.toLowerCase();

        lessonCards.forEach(card => {
          const lessonTitle = card.querySelector('.card-title').textContent.toLowerCase();
          if (lessonTitle.includes(query)) {
            card.style.display = ''; // Show the card if it matches the query
          } else {
            card.style.display = 'none'; // Hide the card if it doesn't match
          }
        });
      });
    });

  </script>
