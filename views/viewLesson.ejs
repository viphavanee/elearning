  <style>
    h1 {
      font-size: 1.5rem;
      margin: 3%;
    }

    .content {
      margin: 3%;
      font-size: 1rem;
    }

    /* General Styling */
    .container {
      max-width: 1100px;
      margin: 0 auto;
      padding: 20px;
    }

    h1 {
      font-size: 30px;
      font-weight: bold;
      color: #333;
      margin-bottom: 30px;
    }

    /* Video Container */
    .embed-responsive {
      position: relative;
      padding-bottom: 56.25%;
      height: 0;
      overflow: hidden;
      max-width: 100%;
      background: #000;
      border-radius: 10px;
    }

    .embed-responsive iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
      border-radius: 10px;
    }

    /* Content Styling */
    .content p {
      font-size: 18px;
      line-height: 1.6;
      color: #555;
      margin-top: 30px;
      font-family: 'Noto Sans Thai', sans-serif;
    }

    /* Mobile Responsiveness */
    @media (max-width: 768px) {
      .container {
        padding-left: 15px;
        padding-right: 15px;
      }

      h1 {
        font-size: 28px;
        margin-bottom: 20px;
      }

      .embed-responsive iframe {
        max-width: 100%;
        height: auto;
      }

      .content p {
        font-size: 16px;
      }
    }
  </style>
</head>

