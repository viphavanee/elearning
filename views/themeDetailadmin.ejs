                                        commentActionBtn.classList.remove("d-none");
                                        commentActionBtn.classList.add("d-flex");
                                    }
                                    if (deleteCommentLink) {
                                        deleteCommentLink.classList.remove("d-none");
                                        deleteCommentLink.classList.add("d-flex");
                                    }
                                });
                                break;

                            case "teacher":
                                if (actionBtn) actionBtn.classList.add("d-none");
                                if (editBtn) editBtn.classList.add("d-none");

                                commentCards.forEach(card => {
                                    const commentUserId = card.querySelector('#commentUserId').textContent.trim();
                                    const commentActionBtn = card.querySelector('.commentActionBtn');
                                    const editCommentBtn = card.querySelector('.editCommentBtn');
                                    const deleteCommentLink = card.querySelector('.delete-commentLink');

                                    if (userId === commentUserId) {
                                        if (commentActionBtn) {
                                            commentActionBtn.classList.remove("d-none");
                                            commentActionBtn.classList.add("d-flex");
                                        }
                                        if (editCommentBtn) {
