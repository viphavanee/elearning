            width: auto;
            /* กำหนดขนาดความกว้าง 50px */
        }

        .dropdown-toggle::after {
            display: none !important;
        }

        .card {
            padding: 3rem;
        }


        @media (max-width: 768px) {

            /* Stack form elements vertically on small screens */
            .comment-section form {
                display: flex;
                flex-direction: column;
            }

            .comment-section form button {
                width: 100%;
                margin-top: 10px;
            }

            /* Stack the comment card content vertically on smaller screens */
            .comment-card .d-flex {
                align-items: flex-start;
            }

            .comment-card .d-flex.align-items-center i {
                margin-bottom: 10px;
            }

            .reply-card {
                margin-left: 20px;
                /* Reduce left margin */
            }

            .comment-card .d-flex.align-items-center i {
                font-size: 1.5rem;
            }

            .comment-card h6 {
                font-size: 1rem;
            }

            .comment-card .text-end small {
                font-size: 0.8rem;
            }

            .card {
                padding: 2rem;
            }

            .textcom {
                margin-top: 2rem;
            }
        }

        /* Extra Small Screens (Mobile) */
        @media (max-width: 576px) {

            /* Adjust the font size of the heading */
            .comment-section h3 {
                font-size: 1.25rem;
                text-align: center;
                /* Center heading for mobile */
            }

            /* Adjust the textarea to fit better on small screens */
            .comment-section form textarea {
                min-height: 80px;
                font-size: 0.95rem;
            }

            /* Make button take full width */
            .comment-section form button {
                width: 100%;
                font-size: 1rem;
                padding: 12px;
                margin-top: 10px;
            }

            /* Adjust comment card padding */
            .comment-card {
                padding: 15px;
                margin-top: 10px;
            }

            .comment-card h6 {
                font-size: 0.95rem;
            }

            .comment-card .text-end small {
                font-size: 0.75rem;
            }

            /* Make reply card more compact */
            .reply-card {
                padding: 15px;
                margin-left: 15px;
            }

            /* Adjust icon sizes for mobile */

            /* Adjust spacing in the comment dropdown menu */


            /* Ensure the dropdown button is properly spaced */
            .comment-card .dropdown-toggle {
                font-size: 1.2rem;
            }

            /* Allow card content to have better margins for small screens */
            .reply-card {
                margin-left: 10px;
            }

            .card {
                padding: 1rem;
            }

            .textcom {
                margin-top: 1rem;
            }
            p{
                color:#333;
            }
        }
